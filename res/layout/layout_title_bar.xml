<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://wxxr.com.cn/binding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titlebar_bg"
    android:contentDescription="titlebar"
    android:gravity="center_vertical"
    android:orientation="vertical" >

	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="44dp"
	    android:background="#FFFFFF"
	    >
	    <ImageButton
	        android:id="@+id/ib_toggle_left_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:visibility="invisible"
	        android:background="@null"
	        bind:field="leftIcon"
	        bind:on_Click="" 
	        android:layout_marginLeft="6dp"/>
		
	    
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:orientation="vertical" >
	        
	        
	        
	        <TextView
	            android:id="@+id/tv_titlename"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:textColor="@color/black"
	            android:textSize="@dimen/fontsize_40" 
	            android:text="标题栏"
	            bind:field="title"
	            />

        	<TextView
	            android:id="@+id/tv_place"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:text="致:--"
	            android:textColor="@color/gd_setting_text"
	            android:textSize="@dimen/fontsize_30" 
	            bind:field="additionalTitle"/>
	        
<!-- 	        <TextView -->
<!-- 		        android:id="@+id/tv_title_content" -->
<!-- 		        android:layout_width="wrap_content" -->
<!-- 	            android:layout_height="wrap_content" -->
<!-- 		        android:layout_centerInParent="true" -->
<!-- 		        android:singleLine="true" -->
<!-- 		        android:textColor="@color/gd_titlebar_text" -->
<!-- 	            android:textSize="@dimen/gd_titlebar_text_size" -->
<!-- 		        android:text="标题栏" -->
<!-- 		        bind:field="title" /> -->
	        
	        
        </LinearLayout>
        
	    
	    
	
	    <ImageButton
	        android:id="@+id/ib_toggle_right_menu"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@null"
	        android:layout_marginRight="6dp"
	        bind:field="rightIcon"
	        android:visibility="invisible"
	        bind:on_Click="" />
	
	    <ImageButton
	        android:id="@+id/ib_toggle_search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="6dp"
	        android:background="@null"
	        android:visibility="invisible"
	        bind:field="searchIcon"
	        bind:on_Click="" />
	</RelativeLayout>
	
</LinearLayout>